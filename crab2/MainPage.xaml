<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="crab2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <!-- Zone de saisie pour le nom -->
            <Entry x:Name="NomEntry" 
               Placeholder="Entrez le nom du technicien" 
               WidthRequest="250" />

            <!-- Bouton de recherche -->
            <Button Text="Rechercher" 
                Clicked="OnSearchButtonClicked" />

            <!-- Labels pour afficher les détails du technicien -->
            <Label x:Name="MatriculeLabel" 
               Text="Matricule: " />

            <Label x:Name="NomLabel" 
               Text="Nom: " />

            <Label x:Name="PrenomLabel" 
               Text="Prénom: " />

            <!-- Bouton de recherche -->
            <Button Text="Listing" 
    Clicked="Button_Clicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
